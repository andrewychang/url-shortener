<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
   <h1>URL Shortener</h1>
   <form action="/shortenUrl" method="POST">
    <input required placeholder="Url Here" type="url" name="longUrl" id = "longUrl">
    <button type = "submit">Shorten</button>
   </form>
   <table>
       <thead>
           <tr>
               <th>Long Url</th>
               <th>Shortened Url</th>
           </tr>
       </thead>
       <tbody>
           <% urls.forEach(url => { %>
               <tr>
                   <td><a href="<%= url.long %>"><%= url.long %></a></td>
                   <td><a href="<%= url.short %>"><%= url.short %></a></td>
               </tr>
           <% }); %> 
       </tbody>
   </table>

</body>
</html>